%div.container-fluid#menu-nav
  %div.row-fluid#menu-nav-row-container
    %div.col-md-2
    %div.col-md-8
      %ul.nav.nav-justified
        %li

          // `.html_safe` in link text Strings are because the images were scaling oddly from the link text Strings being different lengths and in the same list item as the images

          = link_to( image_tag( "gallery/IMG_3171.png", class: "image-responsive menu-images menu-link", id: "bakery-image", :data => { :meal => "bakery" } ), "#menu-top", class: "menu-link-image" )

          // Non-breaking Spaces were needed to stretch label and make responsive images same size
          = link_to( "Bakery&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;".html_safe, "#menu-top", class: "menu-link", :data => { :meal => "bakery" } )

        %li
          = link_to( image_tag( "gallery/IMG_3161.png", class: "image-responsive menu-images menu-link", id: "breakfast-image", :data => { :meal => "breakfast" } ), "#menu-top", class: "menu-link-image" )

          = link_to( "Breakfast&nbsp;".html_safe, "#menu-top", class: "menu-link", :data => { :meal => "breakfast" } )

        %li
          = link_to( image_tag( "gallery/IMG_3090.png", class: "image-responsive menu-images menu-link", id: "lunch-image", :data => { :meal => "lunch" } ), "#menu-top", class: "menu-link-image" )

          // Non-breaking Spaces were needed to stretch label and make responsive images same size
          = link_to( "&nbsp;&nbsp;&nbsp;Lunch&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;".html_safe, "#menu-top", class: "menu-link", :data => { :meal => "lunch" } )

        %li
          = link_to( image_tag( "gallery/IMG_3070.png", class: "image-responsive menu-images menu-link", id: "beverage-image", :data => { :meal => "beverages" } ), "#menu-top", class: "menu-link-image" )

          = link_to( "Beverages", "#menu-top", class: "menu-link", :data => { :meal => "beverages" } )

      %a#menu-top
      %hr#menu-hr

    %div.col-md-2